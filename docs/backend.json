

{
  "entities": {
    "UserAccount": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserAccount",
      "type": "object",
      "description": "Stores user account information, excluding authentication credentials.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user account."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "registrationDate": {
          "type": "string",
          "description": "Date and time when the user registered.",
          "format": "date-time"
        },
        "name": {
            "type": "string",
            "description": "User's display name."
        }
      },
      "required": [
        "id",
        "email",
        "registrationDate"
      ]
    },
    "UserProgress": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "UserProgress",
        "type": "object",
        "description": "Stores a user's progress through lessons, exercises, and challenges.",
        "properties": {
          "lessonCompletions": {
            "type": "array",
            "description": "List of completed lessons.",
            "items": {
              "type": "object",
              "properties": {
                "lessonId": { "type": "string" },
                "isCompleted": { "type": "boolean" }
              }
            }
          },
          "exerciseAttempts": {
            "type": "array",
            "description": "Record of attempts on exercises.",
            "items": {
              "type": "object",
              "properties": {
                "exerciseId": { "type": "string" },
                "attempts": { "type": "number" },
                "successRate": { "type": "number" }
              }
            }
          },
          "badges": {
            "type": "array",
            "description": "List of earned badge IDs.",
            "items": { "type": "string" }
          },
          "challengeProgress": {
            "type": "array",
            "description": "Progress on coding challenges.",
            "items": {
                "type": "object",
                "properties": {
                    "level": { "type": "number" },
                    "completed": { "type": "boolean" }
                }
            }
          },
          "playgroundProgress": {
            "type": "array",
            "description": "Progress on playground challenges.",
            "items": {
                "type": "object",
                "properties": {
                    "level": { "type": "number" },
                    "completed": { "type": "boolean" }
                }
            }
          },
          "hasCompletedTutorial": {
            "type": "boolean",
            "description": "Indicates if the user has completed the onboarding tutorial."
          }
        },
        "required": ["lessonCompletions", "exerciseAttempts", "badges", "challengeProgress"]
      },
    "SupportTicket": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SupportTicket",
      "type": "object",
      "description": "Represents a support ticket submitted by a user.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the support ticket."
        },
        "userId": {
          "type": "string",
          "description": "Reference to UserAccount."
        },
        "subject": {
          "type": "string",
          "description": "Subject of the support ticket."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the issue."
        },
        "status": {
          "type": "string",
          "enum": ["Open", "In Progress", "Closed"],
          "description": "Current status of the ticket."
        },
        "submissionDate": {
          "type": "string",
          "description": "Date and time when the ticket was submitted.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "userId",
        "subject",
        "description",
        "status",
        "submissionDate"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ],
    "customClaims": {
        "isSupportAgent": {
            "type": "boolean"
        }
    }
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserAccount",
          "schema": {
            "$ref": "#/backend/entities/UserAccount"
          },
          "description": "Stores user account information."
        }
      },
      {
        "path": "/users/{userId}/progress/{progressId}",
        "definition": {
            "entityName": "UserProgress",
            "schema": {
                "$ref": "#/backend/entities/UserProgress"
            },
            "description": "Stores the progress of a single user."
        }
      },
      {
        "path": "/users/{userId}/supportTickets/{ticketId}",
        "definition": {
          "entityName": "SupportTicket",
          "schema": {
            "$ref": "#/backend/entities/SupportTicket"
          },
          "description": "Stores support tickets for a specific user."
        }
      }
    ]
  }
}

