
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Custom claim for support agents
    function isSupportAgent() {
      return request.auth.token.isSupportAgent == true;
    }

    // Secure user profiles
    match /users/{userId} {
      allow read: if isOwner(userId) || isSupportAgent();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
      
      // Secure support tickets subcollection
      match /supportTickets/{ticketId} {
        allow read, list: if isOwner(userId) || isSupportAgent();
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update, delete: if isOwner(userId) || isSupportAgent();
      }
    }

    // Allow support agents to list all tickets via a collection group query
    match /{path=**}/supportTickets/{ticketId} {
      allow read, list: if isSupportAgent();
    }
  }
}
